<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:text="@string/main_screen"
        android:textSize="25sp" />

    <Button
        android:id="@+id/UniCon_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="@string/unit_conversion"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="25sp"
        android:fontFamily="@font/gelion_black"/>

    <Button
        android:id="@+id/Formula_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/UniCon_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="@string/formulas"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="25sp"
        android:fontFamily="@font/gelion_black" />

    <Button
        android:id="@+id/MinGme_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Formula_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="@string/mini_games"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="25sp"
        android:fontFamily="@font/gelion_black" />

</RelativeLayout>