<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/main_screen" />

    <Button
        android:id="@+id/UniCon_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Title_txt"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mainscrn_btn"
        android:text="@string/unit_conversion"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Formula_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/UniCon_Btn"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mainscrn_btn"
        android:text="@string/formulas"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/MinGme_Btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Formula_Btn"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mainscrn_btn"
        android:text="@string/mini_games"
        android:textAllCaps="false"
        android:textColor="#6BE8E4"
        android:textSize="20sp" />

</RelativeLayout>